{% extends 'base.html.twig' %}

{% block title %}Редактирование: {{ lesson.name }}{% endblock %}

{% block breadcrumbs %}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('app_course_index') }}">Главная</a></li>
        <li class="breadcrumb-item active"> <a href="{{ path('app_course_show', {'id': lesson.course.id}) }}">{{ lesson.course.title }}</a></li>
        <li class="breadcrumb-item active"> <a href="{{ path('app_lesson_show', {'id': lesson.id}) }}">{{ lesson.name }}</a></li>
        <li class="breadcrumb-item active" aria-current="page">Редактирование</li>
    </ol>
</nav>
{% endblock %}

{% block body %}
    <h1>Редактирование: {{ lesson.name }}</h1>
        {{ include('lesson/_form.html.twig', {'button_label': 'Обновить'}) }}
    <div class='d-flex mt-2 gap-2'>    
        {{ include('lesson/_delete_form.html.twig') }}
    </div>
{% endblock %}
