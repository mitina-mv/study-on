{% extends 'base.html.twig' %}

{% block title %}{{ course.title }}{% endblock %}

{% block body %}
    <h1>{{ course.title }}</h1>
    <p>{{ course.description }}</p>

    {# список уроков #}

    <ul class="list-group">
        {% for lesson in course.lessons | sort((a, b) => a.serialNumber <=> b.serialNumber) %}
        {# {% for lesson in course.lessons %} #}
            <li>
            <a href="{{ path('app_lesson_show', {'id': lesson.id}) }}" class="mb-1 list-group-item list-group-item-action">
                {{ lesson.serialNumber }}. 
                {{ lesson.name }}
            </a>
            </li>
        {% endfor %}
    </ul>

    <a href="{{ path('app_course_index') }}">Назад</a>

    <a href="{{ path('app_course_edit', {'id': course.id}) }}">Редактировать</a>

    {{ include('course/_delete_form.html.twig') }}

    <a href="{{ path('app_lesson_new') ~ '?course_id=' ~ course.id }}">Добавить урок</a>

{% endblock %}
